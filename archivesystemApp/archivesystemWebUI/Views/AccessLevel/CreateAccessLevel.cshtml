@model archivesystemWebUI.Models.CreateAccessLevelViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="account-content">

    <div class="container"> 
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("ManageAccessLevel", "AccessLevel")">Access Levels</a></li>
                        <li class="breadcrumb-item active">Create</li>
                    </ul>
                </div>
            </div>
        </div> 

        <div class="account-box">
            <div class="account-wrapper">
                <h3 class="account-title">Create Access Level</h3>
                <p class="account-subtitle">To access your Dashboard</p>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @using (Html.BeginForm("CreateAccessLevel", "AccessLevel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.LevelDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LevelDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LevelDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button class="btn btn-primary account-btn" type="submit">Create</button>
                    </div>
                 }
            </div>
        </div>
    </div>

   

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
