@model archivesystemDomain.Entities.AccessLevel

@{ ViewBag.Title = "EditAccessLevel";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="account-content">

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("ManageAccessLevel", "AccessLevel")">Access Levels</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="account-box">
            <div class="account-wrapper">
                <h3 class="account-title">Edit Access Level</h3>
                <p class="account-subtitle">Only "Level Description" is edittable</p>
                <hr />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @using (Html.BeginForm("EditAccessLevel", "AccessLevel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Id)
                                                    @Html.HiddenFor(model => model.CreatedAt)
                                                                    @Html.HiddenFor(model => model.UpdatedAt)

                                                                                    <div class="form-group">
                                                                                        @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                                        <div class="col-md-12">
                                                                                            @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                                                                        </div>
                                                                                    </div>

                                                                                                    <div class="form-group">
                                                                                                        @Html.LabelFor(model => model.LevelDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                                                                                                        <div class="col-md-12">
                                                                                                            @Html.EditorFor(model => model.LevelDescription, new { htmlAttributes = new { @class = "form-control" } })
                                                                                                            @Html.ValidationMessageFor(model => model.LevelDescription, "", new { @class = "text-danger" })
                                                                                                        </div>
                                                                                                    </div>

                                                                                                                    <div class="form-group text-center">
                                                                                                                        <button class="btn btn-primary " type="submit">Update</button>
                                                                                                                    </div>}
            </div>
        </div>
    </div>



</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
