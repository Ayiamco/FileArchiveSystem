@using archivesystemWebUI.Models.RoleViewModels
@using archivesystemDomain.Entities
@model  AddToRoleViewModel

<div class="modal-header">
    <h5 class="modal-title">Add Employee To Role</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    <form id="AUTR-form" name="editFolder" onsubmit="AddToRole()">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <input  value="@Model.UserId" hidden id="AUTR-userId" />
        <div class="form-group">
            <label for="employee-name">Employee Name:</label>
            <input value="@Model.EmployeeName" class="form-control" rows="2" readonly name="employee-name"/>
        </div>
        <div class="form-group">
            <select  class="form-control" rows="2" typeof="number" id="AUTR-roleId">
                <option value="">Select Role</option>
                @foreach (ApplicationRole role in Model.Roles)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
        </div>
        <div class="submit-section">
            <button style=" margin:auto" class="btn btn-primary submit-btn" type="submit">Add</button>
        </div>
    </form>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





