@using archivesystemDomain.Entities
@model IEnumerable<ApplicationRole>
@{
    ViewBag.Title = "Index";
}

<!-- Page Wrapper -->
<div class="page-wrapper">
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col">
                    <h3 class="page-title">Roles Dashboard</h3>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row" >
            <div class="col-sm-12" style="display:flex;justify-content:start">
                <div class="card mb-0">
                    <div class="card-header">
                        <h4 class="card-title mb-0"> Application Roles</h4>
                    </div>
                    <div class="card-body">
                        @if (Model.Count() == 0)
                        {
                            <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="datatable table table-stripped mb-0">
                                    <thead>
                                        <tr>
                                            <th>Role Id</th>
                                            <th>Role Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (ApplicationRole role in Model)
                                        {
                                            <tr>
                                                <td>@role.Id</td>
                                                <td>@role.Name</td>
                                                <td>
                                                    @using (Html.BeginForm("GetUsers", "Role", FormMethod.Post, new { roleId = @role.Id }))
                                                    {

                                                        <button class="btn btn-outline-dark"> View Users</button>
                                                    }
                                                </td>
                                                <td>
                                                    @using (Html.BeginForm("Delete", "Role", FormMethod.Post, new { roleId = @role.Id }))
                                                    {
                                                        @Html.Hidden("roleId", role.Id)
                                                        <button class="btn btn-danger" type="submit">Delete</button>
                                                    }
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                           
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- /Page Wrapper -->
