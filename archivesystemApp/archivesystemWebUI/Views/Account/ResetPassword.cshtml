<div class="account-content">

    <div class="container">

        <!-- Account Logo -->
        <div class="account-logo">
            <a href="#"><img src="/Content/assets/img/logo2.png" alt="Archive System"></a>
        </div>
        <!-- /Account Logo -->

        <div class="account-box shadow">
            <div class="account-wrapper">
                <h3 class="account-title">Reset password</h3>
                <hr />

                <!-- Account Form -->
                @using (Ajax.BeginForm("ResetPassword", "Account", new AjaxOptions
                {
                    OnSuccess = "OnSuccess",
                    OnFailure = "OnFailure",
                    LoadingElementId = "saving",
                    LoadingElementDuration = 2000


                }, new { id = "ResetPasswordForm" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "" })
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="submit-section">
                        <div id="saving" class="fa-2x" style="color: gray; display: none">
                            <i class="fa fa-cog fa-spin  fa-fw" aria-hidden="true"></i>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary" type="submit">Reset</button>
                        </div>

                    </div>

                }
                <!-- /Account Form -->

            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
