@model IEnumerable<archivesystemDomain.Entities.AccessLevel>

@{
    ViewBag.Title = "ManageAccessLevel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["DeleteMessage"] != null)
{
    <div class="alert-danger text-center" style="border-radius: 6px; padding: 10px; margin: 10px;">
        @TempData["DeleteMessage"]
    </div>

}
@if (TempData["AccessMessage"] != null)
{
    <div class="alert-success text-center" style="border-radius: 6px; padding: 10px; margin: 10px;">
        @TempData["AccessMessage"]
    </div>

}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active">Access Levels</li>
                </ul>
            </div>
        </div>
    </div>
    <hr />


    @if (Model.Count() == 0)
    {
        <div class="" style="display: flex; justify-content: center; align-items: center; height:200px; ">
            <a href="@Url.Action("CreateAccessLevel", "AccessLevel")" class="btn add-btn shadow"><i class="fa fa-plus"></i> Create an Access Level</a>
        </div>
    }
    else
    {

        <div class="col-auto float-right ml-auto">
            <a href="@Url.Action("CreateAccessLevel", "AccessLevel")" class="btn add-btn shadow"><i class="fa fa-plus"></i> Create Access Level</a>
        </div>

        <h3 class="page-title">Manage Access Level</h3>

        <br />
        <table class="table table-active  table-striped custom-table mb-0 datatable shadow">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Level)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LevelDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedAt)
                </th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedAt)
                    </td>

                    <td>
                        <div class="dropdown dropdown-action">
                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="@Url.Action("EditAccessLevel", "AccessLevel", new { id = item.Id })"><i class="fa fa-edit" aria-hidden="true"></i> Edit</a>
                                @*<a class="dropdown-item" href="@Url.Action("DeleteAccessLevel", "AccessLevel", new {id = item.Id })"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>*@

                            </div>
                        </div>
                    </td>
                </tr>
            }

        </table>

    }
</div>

