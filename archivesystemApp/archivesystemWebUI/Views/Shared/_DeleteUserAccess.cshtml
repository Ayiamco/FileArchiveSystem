@model archivesystemDomain.Entities.AccessDetail


<div class="modal-header">
    <h5 class="modal-title">Remove User from Access Level?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="text-center">

        <dt>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AccessLevel.Level)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccessLevel.Level)
        </dd>


    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-group text-center">
            <button class="btn btn-primary account-btn" type="submit">Remove</button>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
