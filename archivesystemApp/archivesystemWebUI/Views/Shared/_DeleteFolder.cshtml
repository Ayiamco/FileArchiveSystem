
@using archivesystemWebUI.Models
@model DeleteFolderViewModel
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title" style="text-align:center">Do you want to delete @Model.Name folder?</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div style="margin:auto;display:flex;justify-content:center">
        @using (Html.BeginForm("Delete", "Folder", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            <input value="@Model.Id" type="number" hidden name="id" />
            <input value="@Model.ParentId" type="number" hidden name="parentId" />
            <input class="btn btn-danger" type="submit" value="Yes" />

        }
        <button class="btn btn-primary" style="margin-left:0.5em">No</button>

    </div>
</div>


