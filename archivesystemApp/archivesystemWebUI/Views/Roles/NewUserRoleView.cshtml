
@{
    ViewBag.Title = "New UserRole";
}



    <!-- Page Content -->
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title" style="display:flex; justify-content: start;">New UserRole</h3>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Create", "Roles", FormMethod.Post))
                {
                    @Html.ValidationSummary();
                    <div class="form-group">

                        <input name="name" style="width: 70%; display:flex; justify-content: start; " class="form-control" rows="2" placeholder="Enter UserRole Name"/>
                    </div>
                    <div class="submit-section">
                        <button style=" display:flex; justify-content: start;" class="btn btn-primary submit-btn">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /Page Content -->

