

@using archivesystemWebUI.Models
@model RoleViewModel

<div class="modal-header">
    <h5 class="modal-title">Create Role</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    <form id="createRole" name="createRole">
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        
        <input hidden name="role-id" value="@Model.Id" id="role-id"/>
        <div class="form-group">
            <input name="name" class="form-control" rows="2" placeholder="Enter Role Name" value="@Model.Name" id="role-name" />
        </div>
        
        <div class="submit-section">
            <button style=" margin:auto" class="btn btn-primary submit-btn">Add Role</button>
        </div>
    </form>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




