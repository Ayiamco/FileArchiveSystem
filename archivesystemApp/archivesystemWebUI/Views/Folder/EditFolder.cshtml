@using archivesystemDomain.Entities
@using archivesystemWebUI.Models
@model CreateFolderViewModel
@{
    ViewBag.Title = "Edit Folder";
    var currentAccesslevel = Model.AccessLevels.SingleOrDefault(x => x.Id == Model.AccessLevelId);
}

<!-- Page Wrapper -->
<div class="page-wrapper">

    <!-- Page Content -->
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row">
                <div class="col-sm-12">
                    <h3 class="page-title" style="display:flex; justify-content: start;">Edit @Model.Name Folder</h3>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Edit", "Folder", FormMethod.Post))
                {

                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary();

                    <input name="id" value="@Model.Id" hidden />
                    <div class="form-group">

                        <input name="name" style="width: 70%; display:flex; justify-content: start; " class="form-control" rows="2" placeholder="Enter Folder Name" value="@Model.Name" />
                    </div>
                    <div class="form-group">

                        <select name="accessLevelId" style="width: 70%; display:flex; justify-content: start; " class="form-control" rows="2" typeof="number" value="">
                            <option value="@currentAccesslevel.Id">@currentAccesslevel.Level</option>
                            @foreach (AccessLevel level in Model.AccessLevels)
                            {
                                if (level.Id != currentAccesslevel.Id)
                                {
                                    <option value="@level.Id">@level.Level</option>
                                }

                            }
                        </select>
                    </div>
                    <div class="submit-section">
                        <button style=" display:flex; justify-content: start;" class="btn btn-primary submit-btn" type="submit">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

